{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"],
            "@sinonjs/fake-timers": ["node_modules/@types/sinonjs__fake-timers"]
        },
        "incremental": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "lib": ["dom", "es6", "esnext.asynciterable"],
        "skipLibCheck": true
    },
    "exclude": ["node_modules", ".vscode-test", "src/testFixtures", "dist"]
}
