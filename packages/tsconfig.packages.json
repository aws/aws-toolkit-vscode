{
    "compilerOptions": {
        "paths": {
            "*": ["types/*"],
            "@sinonjs/fake-timers": ["node_modules/@types/sinonjs__fake-timers"]
        },
        "incremental": true,
        "module": "commonjs",
        "target": "es2021",
        "sourceMap": true,
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "lib": ["dom", "es2021"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "esModuleInterop": true
    }
}
